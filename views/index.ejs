<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('./partials/head.ejs') %>
</head>

<body>
  <%- include('./partials/header.ejs') %>
  <div class="container space">
    <% for(let i = 0; i < rsvps.length; i++){ %>
    <div class="content mx-auto">
      <div class="row">
        <div class="col">
          <ul>
            <li>
              <h3 class="show">Name</h3>
              <p class="show"><%=rsvps[i].name; %></p>
            </li>
          </ul>
        </div>
        <div class="col">
          <ul>
            <li>
              <h3 class="show">From</h3>
              <p class="show"><%=rsvps[i].from; %></p>
            </li>
          </ul>
        </div>
      </div>
      <ul>
        <li>
          <h3>Memory</h3>
          <p class="tex"><%=rsvps[i].memory; %></p>
        </li>
        <li>
          <h3>Wish</h3>
          <p class="tex"><%=rsvps[i].wish; %></p>
        </li>
        <li>
          <h3>Side</h3>
          <p class="tex"><%=rsvps[i].side; %>'s side</p>
        </li>
        <li>
          <h6><%=rsvps[i].createdAt; %></h6>
        </li>
        <hr class="gold-index">

      </ul>
    </div>
    <% } %>
  </div>
  <%- include('./partials/nav.ejs') %>
</body>

</html>
